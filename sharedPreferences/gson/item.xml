<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: 조커"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/race_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Race: Human"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/name_tv"
        app:layout_constraintTop_toBottomOf="@id/name_tv"/>
    <TextView
        android:id="@+id/level_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level: 23"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/race_tv"
        app:layout_constraintTop_toBottomOf="@id/race_tv"/>
    <TextView
        android:id="@+id/hp_mp_exp_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HP: 200 / MP: 20 / EXP: 100"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/level_tv"
        app:layout_constraintTop_toBottomOf="@id/level_tv"/>
    <TextView
        android:id="@+id/encounted_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encounted: false"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/hp_mp_exp_tv"
        app:layout_constraintTop_toBottomOf="@id/hp_mp_exp_tv"/>

    <ImageView
        android:id="@+id/more_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/name_tv"
        app:layout_constraintBottom_toBottomOf="@id/encounted_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/encounted_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>